<span class="count_of_videos">Znaleziono <b><%= @results.count %></b> rezultatow.</span>
<hr id="hr_show"/>
<div id="videos">
<% @results.each do |video| %>
<div class="video">  
<h3 class="loud"><%= link_to video.title, video %></h3>
<% if !(video.season.nil? and video.episode.nil?) %>
<p>Sezon <%= video.season.number %><br />Odcinek <%= video.episode %></p>
<% end %>
<p><%= link_to image_tag(video.photo.url(:mini)), video %></p> <br /></div>
<% end %></div>
<div style="text-align: center"><%= will_paginate @results %></div>
