<div class="comments">
<% for comment in @comments do %>
<span class="comment_details">
Video title: <%= comment.video.title %> <br />
<%= comment.name %> &lt; <%= comment.email %> &gt; |
</span>
<span class='actions'>
<%= link_to 'Delete', comment_url(comment), :confirm => 'Are you sure?', :method => :delete %>
</span>
<br /><br />
<span class="comment_body">
<%= raw comment.body %>
</span>
<hr id="hr_show"/>
<% end %>
</div>
